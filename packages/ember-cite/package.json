{
  "name": "ember-cite",
  "version": "0.0.1",
  "description": "Academic/Scientific citation with microformats",
  "keywords": [
    "ember-addon",
    "academic",
    "scientific",
    "writing",
    "citation",
    "references",
    "bibliography"
  ],
  "repository": "https://github.com/gossi/ember-cite",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "types": "declarations",
  "files": [
    "addon-main.js",
    "dist",
    "translations",
    "declarations"
  ],
  "scripts": {
    "start": "rollup -c --watch",
    "build": "FORCE_COLOR=1 npm-run-all --aggregate-output --parallel \"build:*\"",
    "build:js": "rollup -c",
    "build:types": "tsc --build",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "test": "echo 'Addon does not have tests, run tests in test-app'",
    "prepare": "yarn build",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@embroider/addon-shim": "^0.50.1",
    "@embroider/macros": "^0.50.1",
    "@embroider/util": "^0.50.1",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "ember-assign-helper": "^0.4.0",
    "ember-functions-as-helper-polyfill": "^1.0.11",
    "ember-intl": "^5.7.2",
    "ember-truth-helpers": "^3.0.0",
    "tracked-built-ins": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-syntax-decorators": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@embroider/addon-dev": "^0.50.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/eslint": "^8.2.2",
    "@types/ember__runloop": "^3.16.3",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "ember-template-lint": "^4.0.0",
    "ember-source": "^4.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ember": "^10.5.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "^14.12.1",
    "release-it-lerna-changelog": "^4.0.1",
    "rollup": "^2.63.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": "12.* || >= 14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    "./*": "./dist/*",
    "./addon-main.js": "./addon-main.js"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.js",
    "app-js": {
      "./components/references.js": "./dist/_app_/components/references.js",
      "./components/references/article/index.js": "./dist/_app_/components/references/article/index.js",
      "./components/references/base/index.js": "./dist/_app_/components/references/base/index.js",
      "./components/references/book/index.js": "./dist/_app_/components/references/book/index.js",
      "./components/references/media/index.js": "./dist/_app_/components/references/media/index.js",
      "./components/references/thesis/index.js": "./dist/_app_/components/references/thesis/index.js",
      "./components/references/base/author/index.js": "./dist/_app_/components/references/base/author/index.js",
      "./components/references/base/editor/index.js": "./dist/_app_/components/references/base/editor/index.js",
      "./components/references/base/producer/index.js": "./dist/_app_/components/references/base/producer/index.js",
      "./components/references/formatter/apa/index.js": "./dist/_app_/components/references/formatter/apa/index.js",
      "./components/references/media/tv-episode/index.js": "./dist/_app_/components/references/media/tv-episode/index.js",
      "./components/references/media/video/index.js": "./dist/_app_/components/references/media/video/index.js",
      "./components/references/media/webisode/index.js": "./dist/_app_/components/references/media/webisode/index.js",
      "./components/references/web/blog-post/index.js": "./dist/_app_/components/references/web/blog-post/index.js",
      "./components/references/web/web-page/index.js": "./dist/_app_/components/references/web/web-page/index.js",
      "./components/references/formatter/apa/article/index.js": "./dist/_app_/components/references/formatter/apa/article/index.js",
      "./components/references/formatter/apa/book/index.js": "./dist/_app_/components/references/formatter/apa/book/index.js",
      "./components/references/formatter/apa/media/index.js": "./dist/_app_/components/references/formatter/apa/media/index.js",
      "./components/references/formatter/apa/web/index.js": "./dist/_app_/components/references/formatter/apa/web/index.js",
      "./components/references/formatter/apa/parts/authors/index.js": "./dist/_app_/components/references/formatter/apa/parts/authors/index.js",
      "./components/references/formatter/apa/parts/people/index.js": "./dist/_app_/components/references/formatter/apa/parts/people/index.js",
      "./components/references/formatter/apa/parts/person/index.js": "./dist/_app_/components/references/formatter/apa/parts/person/index.js",
      "./components/references/formatter/apa/parts/source/index.js": "./dist/_app_/components/references/formatter/apa/parts/source/index.js"
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
